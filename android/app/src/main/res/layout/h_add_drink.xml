<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/hidrate_add_drink_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="500"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hidrate_add_drink_size"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="ml"
            android:textSize="24sp" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hidrate_add_water_glass"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/water_glass" />

            <ImageView
                android:id="@+id/hidrate_add_water_bottle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/water_bottle" />

            <ImageView
                android:id="@+id/hidrate_add_bottle_gym"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/water_bottle_gym" />

            <ImageView
                android:id="@+id/hidrate_add_tea"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tea" />

            <ImageView
                android:id="@+id/hidrate_add_coffee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/coffee" />

            <ImageView
                android:id="@+id/hidrate_add_beer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pint" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>