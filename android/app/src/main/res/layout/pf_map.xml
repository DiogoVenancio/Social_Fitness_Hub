<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    tools:context=".PartnerFinder.PartnerFinderMapActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/MainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cycling_filter"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cycling"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/cycling_text_map_page_partner_finder"
                    app:srcCompat="@drawable/cycling" />

                <TextView
                    android:id="@+id/cycling_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cycling_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/soccer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/soccer_text_map_page_partner_finder"
                    app:srcCompat="@drawable/soccer" />

                <TextView
                    android:id="@+id/soccer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soccer_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/running"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/running_text_map_page_partner_finder"
                    app:srcCompat="@drawable/running" />

                <TextView
                    android:id="@+id/running_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/running_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/swimming"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/swimming_text_map_page_partner_finder"
                    app:srcCompat="@drawable/swimming" />

                <TextView
                    android:id="@+id/swimming_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swimming_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tennis"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/tennis_text_map_page_partner_finder"
                    app:srcCompat="@drawable/tennis" />

                <TextView
                    android:id="@+id/tennis_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tennis_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/surf"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/surf_text_map_page_partner_finder"
                    app:srcCompat="@drawable/surf" />

                <TextView
                    android:id="@+id/surf_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surf_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/golf"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/golf_text_map_page_partner_finder"
                    app:srcCompat="@drawable/golf" />

                <TextView
                    android:id="@+id/golf_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/golf_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/volleyball"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/volleyball_text_map_page_partner_finder"
                    app:srcCompat="@drawable/volleyball" />

                <TextView
                    android:id="@+id/volleyball_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volleyball_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/basketball"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/basketball_text_map_page_partner_finder"
                    app:srcCompat="@drawable/basketball" />

                <TextView
                    android:id="@+id/basketball_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basketball_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addsport"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/addsport_text_map_page_partner_finder"
                    app:srcCompat="@drawable/add" />

                <TextView
                    android:id="@+id/addsport_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addsport_text_map_page_partner_finder"
                    android:textSize="18sp"></TextView>
            </LinearLayout> -->

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>